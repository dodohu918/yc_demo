# ===========================================
# Cephalometric MVP - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# ===========================================

# PostgreSQL Database Configuration
# ---------------------------------
# These match the settings you'll use in pgAdmin when creating the database

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cephalometric_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Full connection URL (auto-constructed from above, but can override)
# DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/cephalometric_db

# Application Settings
# --------------------
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=true
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Storage
# ------------
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# ML Model Settings
# -----------------
MODEL_DIR=./models
# Device will auto-detect (cuda/mps/cpu), but can force:
# FORCE_DEVICE=cpu
